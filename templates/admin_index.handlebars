<div class="row-fluid">
  <div class="span12">
    <div class="content-box">
      <div class="content-box-header">
        <i class="icon-bar-chart"></i> Crash Reports
      </div>

      <div class="row-fluid">
        <div class="span12">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Application</th>
                <th>Version</th>
                <th>Platform</th>
                <th>Date reported</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              {{#each crashes }}
                <tr>
                  <td>{{this.applicationname}}</td>
                  <td>{{this.systemversion}}</td>
                  <td>{{this.platform}}</td>
                  <td>{{this.timestamp}}</td>
                  <td>
                    <a href="/crash/{{this.id}}" class="btn btn-mini btn-blue">
                      <i class="icon-list"></i> Show log
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
